@model WebFinal.Models.tb_User

@{
    ViewBag.Title = "InfoUser";
    Layout = "~/Views/Shared/_LayoutViewUser.cshtml";
}

<style>
    .label-For-Upload_img
    {
        cursor: grab;
    }
     label{
        text-align: left;
        font-weight : bold;
        letter-spacing : .5px;
        height : 16px;
    }
     .form-horizontal{
         min-height : 700px;
     }
     a{
         text-decoration: none;
         color : black;
     }
     a:hover{
          text-decoration: none;
          color : orange;
     }
</style>

@using (Html.BeginForm("UpdateUser", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{

    <div class="form-horizontal container-fluid py-5">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row">
            <h2 class="col-12 text-center">Thông Tin Cá Nhân</h2>
            <div class="col-6 text-center col-left">

                <img id="id-avatar" src=@Url.Content(Model.imageUser) height="280" width="280" />
                <div class="choose-file-avatar ">
                    <label class="label-For-Upload_img" for="upload-photo"><i class="fa fa-wrench" aria-hidden="true"></i> Chỉnh Sửa </label>
                    <input type="file" name="imgfile" id="upload-photo" placeholder="Chỉnh Sửa" value=@Url.Content(Model.imageUser) hidden />

                    <h4>@ViewBag.error</h4>
                </div>

            </div>

            <div class="col-6">

                <div class="form-group" hidden>

                    <div class="col-md-10">
                        @Html.EditorFor(model => model.idUser, new { htmlAttributes = new { @class = "form-control", display = "none" } })

                    </div>
                </div>
                <div class="form-group">
                    <label class="control-label col-md-3">Email</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">Tên Hiển Thị</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.displayName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.displayName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">Mật Khẩu</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="control-label col-md-3">Số Điện Thoại</label>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.phoneUser, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.phoneUser, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Lưu" class="btn btn-primary" />

                    </div>
                </div>
                
            </div>


        </div>

    </div>

    <div class="ml-2">
        <a href=@Url.Content("Index")><i class="fa fa-arrow-left" aria-hidden="true"></i> Về trang quản lý</a>
    </div>
}
    @section scripts
    {

        <script>
            $(document).ready(function () {

                $("#upload-photo").change(function () {
                    var src = $("#upload-photo").val();
                    $("#id-avatar").attr('src', src);

                })
            })


        </script>
    }