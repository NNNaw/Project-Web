@model WebFinal.Models.ViewProductDetail

@{
    Layout = null;
   

}
<style>
    .footer-modal {
        display: flex;
        justify-content: flex-end;
        padding: 0px 10px;
        margin-bottom: 5px;
    }
</style>

@using (Html.BeginForm("ModalViewProduct", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.HiddenFor(model => model.idProduct)
    @Html.ValidationSummary(true,"",new { @class = "text-danger" })
    <div class="form-group row">
        <label class="control-label col-4">Tên Sản Phẩm</label>
        <div class="col-8">
            @Html.EditorFor(model => model.nameProduct, new { htmlAttributes = new { @class = "form-control"}})
            @Html.ValidationMessageFor(model => model.nameProduct)
        </div>
    </div>
    <div class="form-group row">
            <label class="control-label col-md-4">Loại Sản Phẩm</label>
            <div class="col-md-8">
                @*@Html.DropDownListFor(model => model.idCate, new SelectList(Model.Categoies,"idCate" , "nameCate"), "", new { @class = "form-control" })*@
                @Html.DropDownListFor(model => model.idCate, ViewBag.cateList as SelectList, "--Chọn--", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.idCate, "", new { @class = "text-danger" })
            </div>
            </div>

        <div class="form-group row">
            <label class="control-label col-md-4">Mô Tả</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.desProduct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.desProduct)
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-4">Giá</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.priceProduct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.priceProduct)
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-4">Số Lượng</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.QuanTum, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.QuanTum)
            </div>
        </div>
        <div class="form-group row">
            <label class="control-label col-md-4">Đánh Giá</label>
            <div class="col-md-8">
                @Html.EditorFor(model => model.rateProduct, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.rateProduct)
            </div>
        </div>


        if (Model.idProduct != 0)
        {
            <div class="form-group row">
                <label class="control-label col-md-4">Tình Trạng</label>

                <div class="col-md-8">

                    @Html.DropDownListFor(model => model.status, new List<SelectListItem>()
                    {
                       new SelectListItem() { Text = "CÒN", Value = "True" },
                       new SelectListItem() { Text = "HẾT", Value = "False"}
                    }, "Select.....", new { @id = "status", @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.status)

                    @*@Html.DropDownListFor(model => model.status, ViewBag.StatusPro as SelectList,
                new { @id = "status", @class = "form-control" })
                @Html.ValidationMessageFor(model => model.status, "", new { @class = "text-danger" })*@
            </div>
        </div>


    }

<div class="form-group row">
    <label class="control-label col-md-4">Hình Ảnh</label>
    @if (Model.idProduct > 0)
    {
<div class="col-md-8">
    @*@Html.TextBoxFor(model => model.imageProduct, new { @lass = "form-control", @type = "file", @name = "imageProduct" })

        @Html.ValidationMessageFor(model => model.imageProduct, "", new { @class = "text-danger" })*@
    <input type="file" name="imageProduct" class="form-control" />
    @Html.ValidationMessageFor(model => model.imageProduct, "", new { @class = "text-danger" })
</div>
    }
    else
    {
      
<div class="col-md-8">
    <input type="file" name="imageProduct" class="form-control" required="required" />
    @Html.ValidationMessageFor(model => model.imageProduct, "", new { @class = "text-danger" })
    @*@Html.TextBoxFor(model => model.imageProduct, new { @lass = "form-control", @type = "file", @name = "imageProduct", required = "required" })

    @Html.ValidationMessageFor(model => model.imageProduct, "", new { @class = "text-danger" })*@
</div>
    }
</div>


    <div class="form-group row footer-modal">
        <input type="submit" value="Lưu" class="btn btn-primary text-right" />
    </div>
}

