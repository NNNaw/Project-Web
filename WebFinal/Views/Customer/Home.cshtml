@using PagedList.Mvc
@model PagedList.IPagedList<WebFinal.Models.tbl_Product>

@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_LayoutCustomer.cshtml";
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
}

<style>
    .card {
        max-width: 31%;
        margin: 10px 7px;
        padding: 0px;
    }

    .card-img-top {
        height: 250px;
    }

    .card-title {
        padding: 10px 0;
    }

    .footer-button {
        justify-content: space-around;
        margin: 10px 0px;
    }

    hr {
        margin-bottom: 0px;
    }

    .blue-square-container {
        text-align: center;
    }

    .tag-a {
        color: white;
    }

    .blue-square {
        display: inline-block;
    }
</style>


<div class="container">



    <div class="row"> <h2>Mặt Hàng Tiêu Biểu</h2></div>
    <div class="row">

        <div id="myCarousel" class="carousel slide" data-ride="carousel">
            <!-- Indicators -->
            <ol class="carousel-indicators">
                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                <li data-target="#myCarousel" data-slide-to="1"></li>
                <li data-target="#myCarousel" data-slide-to="2"></li>
            </ol>

            <!-- Wrapper for slides -->
            <div class="carousel-inner">
                <div class="item active">
                    <img src="https://img1.oto.com.vn/Static/Images/home-banner-slide-1.jpg" alt="Los Angeles" style="width:1100px;height:550px">
                </div>

                <div class="item">
                    <img src="https://vcdn-vnexpress.vnecdn.net/2020/01/12/10-Toyota-Corolls-1-9493-1578836759.jpg" alt="Los Angeles" style="width:1100px;height:550px">

                </div>

                <div class="item">
                    <img src="https://cdn.dailyxe.com.vn/image/mua-xe-oto-tra-gop-58459j.jpg" alt="Los Angeles" style="width:1100px;height:550px">

                </div>
            </div>

            <!-- Left and right controls -->
            <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                <span class="glyphicon glyphicon-chevron-left"></span>
                <span class="sr-only">Previous</span>
            </a>
            <a class="right carousel-control" href="#myCarousel" data-slide="next">
                <span class="glyphicon glyphicon-chevron-right"></span>
                <span class="sr-only">Next</span>
            </a>
        </div>
    </div>

    <hr />
    <h2>Danh Sách Sản Phẩm</h2>
    <div class="row m-0">

        @if (Model != null)
        {
            foreach (var item in Model)
            {

                <div class="col-4 card">
                    <img src=@Url.Content(item.imageProduct) class="card-img-top" alt=@item.idProduct>
                    <div class="body">
                        <h5 class="card-title text-center">@item.nameProduct</h5>
                        <hr />
                        <div class="footer-button d-flex">
                            <a class="btn btn-primary tag-a" href=@Url.Action("DetailPro", "Customer", new { id = item.idProduct , @class=""}, null)>Chi Tiết</a>
                        </div>
                        <div>

                            <p>Số lượng sản phẩm (@item.quantum)</p>
                        </div>
                    </div>
                </div>
            }
        }
        @if (Model.Count == 0)
        {
            <h4>Không có loại sản phẩm này</h4>
        }

    </div>

    <div class="blue-square-container">
        <div class="blue-square">
            <div class="pagination">

                @Html.PagedListPager(Model, page => Url.Action("Home", new { page }))

            </div>
        </div>
    </div>

</div>

