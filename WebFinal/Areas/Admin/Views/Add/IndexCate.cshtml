@model IEnumerable<WebFinal.Models.ViewDetailCate>
@{
    ViewBag.Title = "IndexCate";
    Layout = "~/Views/Shared/_LayoutViewAdmin.cshtml";
}
    <style>
        .card-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
    </style>
    <main>
        <div class="container-fluid">
            <h1 class="mt-4">Quản Lý Hàng Hóa</h1>

            <div class="card mb-4">
                <div class="card-header">
                    <div>
                        <i class="fas fa-table mr-1"></i>
                        Danh Sách Người Dùng
                    </div>
                    <div>

                        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalCenter">
                            <i class="fa fa-plus" aria-hidden="true"></i> Thêm Loại Hàng Hóa
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Mã Loại</th>
                                    <th>Tên Loại</th>
                                    <th>Hình Ảnh</th>
                                    <th>Số Lượng</th>
                                    <th>Người Tạo</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>Mã Loại</th>
                                    <th>Tên Loại</th>
                                    <th>Hình Ảnh</th>
                                    <th>Số Lượng</th>
                                    <th>Người Tạo</th>
                                    <th>Thao Tác</th>
                                </tr>
                            </tfoot>

                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="text-center">
                                        <td>@item.idCate</td>
                                        <td>@item.nameCate</td>
                                        <td><img src=@Url.Content(item.imageCate) width="60" height="50" /></td>

                                        <td>@item.quantumCate</td>
                                        <td>@item.Admin</td>
                                        <td>
                                            <button class="btn btn-warning btn-alterPro"><i class="fa fa-cog" aria-hidden="true"></i> @Html.ActionLink("Sửa", "DetailCate", "User", new { id = item.idCate }, null)</button>
                                            <button class="btn btn-danger btn-deletePro"><i class="fa fa-trash" aria-hidden="true"></i> @Html.ActionLink("Xóa", "DeleteCate", "Add", new { id = item.idCate }, null)</button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>


        <div class="modal fade" id="exampleModalCenter" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalCenterTitle">Thêm Người Dùng</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        @using (Html.BeginForm("CreateCate", "Add", FormMethod.Post,new { enctype = "multipart/form-data" }))
                        {
                            <div class="form-group">
                                <label for="nameCate">Tên Loại</label>
                                <input type="text" class="form-control" id="nameCate" placeholder="Nhập tên loại" name="nameCate">
                            </div>
                            <div class="form-group">
                                <label for="imageCate">Hình Ảnh</label>
                                <input type="file" class="form-control" id="imageCate" name="imgfile">
                            </div>
                    
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                                <button type="submit" class="btn btn-primary">Thêm</button>
                            </div>

                        }


                    </div>

                </div>
            </div>
        </div>

    </main>

